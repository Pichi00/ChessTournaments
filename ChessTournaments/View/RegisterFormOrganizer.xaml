<UserControl x:Class="ChessTournaments.View.RegisterFormOrganizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessTournaments.View"
             xmlns:vm="clr-namespace:ChessTournaments.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="250">
    <Grid Background="White">
        <StackPanel>
            <Label Content="Nazwa organizatora"/>
            <TextBox 
                Margin="5 10" 
                Width="200" 
                HorizontalAlignment="Left"
                Text="{Binding NazwaOrganizatora}"
                >

            </TextBox>
        </StackPanel>
        

    </Grid>
</UserControl>
